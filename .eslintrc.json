{
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true
    },
    "extends": [
        "airbnb",
        "plugin:jasmine/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2015
    },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jasmine"
    ],
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["warn", 2],
        "react/jsx-filename-extension": [ 1, { "extensions": [".js", ".jsx"] } ],
        "react/prefer-stateless-function": "off"
    }
}