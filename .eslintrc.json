{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "jest": true
  },
  "globals": {
    "jestExpect": true,
    "shallow": true
  },
  "extends": [
    "airbnb",
    "plugin:jasmine/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2015
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jasmine"
  ],
  "rules": {
    "indent": ["error", 2],
    "react/jsx-filename-extension": [ 1, { "extensions": [".js", ".jsx"] } ],
    "import/no-extraneous-dependencies": [
      "error", {"devDependencies": ["**/*.test.js", "**/*.spec.js"]}
    ],
    "import/destructuring-assignment": [ "enabled", "always", { "ignoreClassFields":  false } ]
  }
}
